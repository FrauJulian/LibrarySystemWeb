@model StudentUpsertViewModel
@{
    ViewData["Title"] = "Schüler bearbeiten";
}
<h1 class="h4">Schüler bearbeiten</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CardNumber" class="form-label"></label>
        <input asp-for="CardNumber" class="form-control" />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary" type="submit">Speichern</button>
    <a class="btn btn-outline-secondary" asp-action="Index">Zurück</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
