@model StudentDetailsDto
@{
    ViewData["Title"] = "Schülerdetails";
}
<h1 class="h4">Schülerdetails</h1>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Ausweisnummer</dt>
            <dd class="col-sm-9">@Model.CardNumber</dd>

            <dt class="col-sm-3">Vorname</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Nachname</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "aktiv" : "deaktiviert")</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.StudentId">Bearbeiten</a>
    <a class="btn btn-outline-danger" asp-action="Deactivate" asp-route-id="@Model.StudentId">Deaktivieren</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Zurück</a>
</div>
