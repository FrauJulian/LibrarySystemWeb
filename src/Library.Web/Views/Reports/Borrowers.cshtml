@model IReadOnlyList<StudentWithLoansDto>
@{
    ViewData["Title"] = "Schüler mit aktiven Ausleihen";
    var query = (ViewBag.Q as string) ?? "";
}

<h1 class="h4">Schüler mit aktiven Ausleihen</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-6">
        <input class="form-control" name="query" value="@query" placeholder="Suche: Schüler, Ausweisnummer, Buchnummer, Titel" />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit">Suchen</button>
    </div>
    <div class="col-auto">
        <a class="btn btn-outline-secondary" asp-action="Borrowers">Reset</a>
    </div>
</form>

@if (Model.Count == 0)
{
    <div class="alert alert-info mt-3">Aktuell hat niemand ein Buch ausgeliehen.</div>
}
else
{
    @foreach (var s in Model)
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="h6 mb-0">@s.StudentFullName</div>
                        <div class="text-muted small">@s.StudentCardNumber</div>
                    </div>
                    <div class="badge bg-primary">@s.ActiveLoans</div>
                </div>

                <div class="table-responsive mt-3">
                    <table class="table table-sm table-striped align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Buch</th>
                            <th>Ausgeliehen am</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var b in s.Books)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@b.BookTitle</div>
                                    <div class="text-muted small">@b.BookNumber</div>
                                </td>
                                <td>@b.LoanedAtUtc.ToLocalTime().ToString("dd.MM.yyyy")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}
