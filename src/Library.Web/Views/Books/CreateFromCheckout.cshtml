@model BookCreateFromCheckoutViewModel
@{
    ViewData["Title"] = "Buch erfassen (On-Demand)";
    var subjects = ViewBag.Subjects as List<SelectListItem> ?? [];
}

<h1 class="h4">Buch erfassen (On-Demand)</h1>

<div class="alert alert-info mt-3">
    Dieses Buch ist noch nicht im System. Bitte erfassen, dann geht's zurück zur Ausleihe.
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="StudentCardNumber" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="BookNumber" class="form-label"></label>
        <input asp-for="BookNumber" class="form-control" />
        <span asp-validation-for="BookNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AuthorOrEditor" class="form-label"></label>
        <input asp-for="AuthorOrEditor" class="form-control" />
        <span asp-validation-for="AuthorOrEditor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubjectId" class="form-label"></label>
        <select asp-for="SubjectId" class="form-select" asp-items="subjects"></select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="row g-2">
        <div class="col-md-4">
            <label asp-for="Isbn" class="form-label"></label>
            <input asp-for="Isbn" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Publisher" class="form-label"></label>
            <input asp-for="Publisher" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="PublisherCity" class="form-label"></label>
            <input asp-for="PublisherCity" class="form-control" />
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="PublishedOn" class="form-label"></label>
        <input asp-for="PublishedOn" class="form-control" />
    </div>

    <div class="mt-4 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Speichern & zurück</button>
        <a class="btn btn-outline-secondary" asp-controller="Loans" asp-action="Checkout" asp-route-studentCardNumber="@Model.StudentCardNumber" asp-route-bookNumber="@Model.BookNumber">Abbrechen</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
