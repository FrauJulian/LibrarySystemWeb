<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BSEVITA Bibliotheksverwaltung</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">BSEVITA Library</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="nav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Loans" asp-action="Checkout">Ausleihe</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Returns" asp-action="Index">R端ckgabe</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Loans" asp-action="Active">Aktive Ausleihen</a>
                </li>
                <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="Index">B端cher</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Students" asp-action="Index">Sch端ler</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Reports</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="Overdue">Mahnlisten</a></li>
                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="Borrowers">Sch端ler mit
                                Ausleihen</a></li>
                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="Stats">Statistik</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main class="container py-4">
    @await Html.PartialAsync("_Flash")
    @RenderBody()
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>
